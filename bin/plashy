#!/usr/bin/perl
#
# $Id$
#
use strict;
use warnings;

BEGIN {
   use File::HomeDir;

   my $lib = File::HomeDir->my_home."/plashy/lib";
   $lib =~ s/\\/\//g; # Converts Windows path

   eval("use lib \"$lib\";");
   if ($@) {
      die("[-] FATAL: plashy: unable to load plashy libs [$@]\n");
   }
}

use Plashy::Shell;

my $script = shift;

$Plashy::Shell::Logger = 'Plashy::Log::Console';
my $shell = Plashy::Shell->new;

if (defined($script)) {
   $shell->cmd("script $script");
}
else {
   $shell->cmdloop;
}
