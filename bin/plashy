#!/usr/bin/perl
#
# $Id$
#
use strict;
use warnings;

BEGIN {
   use File::HomeDir;

   my $lib = File::HomeDir->my_home."/plashy/lib";
   $lib =~ s/\\/\//g; # Converts Windows path

   eval("use lib \"$lib\";");
   if ($@) {
      die("FATAL: unable to load plashy libs [$@]\n");
   }
}

use Plashy;
use Plashy::Log;
use Plashy::Shell;

my $log = Plashy::Log->new(
   level => 1,
);

my $plashy = Plashy->new(
   log => $log,
);

$Plashy::Shell::plashy = $plashy;

my $shell = Plashy::Shell->new;

$shell->cmdloop;
