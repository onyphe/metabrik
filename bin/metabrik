#!/usr/bin/perl
#
# $Id$
#
use strict;
use warnings;

BEGIN {
   use File::HomeDir;

   my $lib = File::HomeDir->my_home."/perl5/lib/perl5";
   $lib =~ s/\\/\//g; # Converts Windows paths

   eval("use lib \"$lib\";");
   if ($@) {
      chomp($@);
      die("[F] meby: unable to load Metabrik libs [$@]\n");
   }
}

use Metabrik::Brik::Core::Context;

my $script = shift;

my $context = Metabrik::Brik::Core::Context->new;
$context->init or return;

$context->load('shell::meby') or return;

#$context->set('core::log', 'level', 3) or return;

if (defined($script)) {
   $context->load('shell::script') or return;
   #$context->set('shell::script', 'file', $script) or return;
   #$context->set('shell::script', 'debug', 1) or return;
   #$context->set('shell::meby', 'debug', 1) or return;
   $context->run('shell::meby', 'script', $script) or return;
   #my $cmd = $context->run('shell::script', 'load');
   #for (@$cmd) {
      #print "DEBUG cmd[$_]\n";
      #if (/^exit$/) {
         #exit;
      #}
      #$context->run('shell::meby', 'cmd', $_);
   #}
}
else {
   $context->load('shell::rc') or return;

   # ASCII art courtesy: http://patorjk.com/software/taag/#p=testall&f=Graffiti&t=MetabriK
   print<<EOF

 ███▄ ▄███▓▓█████▄▄▄█████▓ ▄▄▄       ▄▄▄▄    ██▀███   ██▓ ██ ▄█▀
▓██▒▀█▀ ██▒▓█   ▀▓  ██▒ ▓▒▒████▄    ▓█████▄ ▓██ ▒ ██▒▓██▒ ██▄█▒ 
▓██    ▓██░▒███  ▒ ▓██░ ▒░▒██  ▀█▄  ▒██▒ ▄██▓██ ░▄█ ▒▒██▒▓███▄░ 
▒██    ▒██ ▒▓█  ▄░ ▓██▓ ░ ░██▄▄▄▄██ ▒██░█▀  ▒██▀▀█▄  ░██░▓██ █▄ 
▒██▒   ░██▒░▒████▒ ▒██▒ ░  ▓█   ▓██▒░▓█  ▀█▓░██▓ ▒██▒░██░▒██▒ █▄
░ ▒░   ░  ░░░ ▒░ ░ ▒ ░░    ▒▒   ▓▒█░░▒▓███▀▒░ ▒▓ ░▒▓░░▓  ▒ ▒▒ ▓▒
░  ░      ░ ░ ░  ░   ░      ▒   ▒▒ ░▒░▒   ░   ░▒ ░ ▒░ ▒ ░░ ░▒ ▒░
░      ░      ░    ░        ░   ▒    ░    ░   ░░   ░  ▒ ░░ ░░ ░ 
       ░      ░  ░              ░  ░ ░         ░      ░  ░  ░   
                                          ░                     
EOF
;

   my $version = $context->run('core::global', 'metabrik_version');

   print "--[ Welcome to Metabrik - Knowledge is in your head, Detail is in the code ]--\n";
   print "--[ Version $version ]--\n";
   print "\n";

   print "    There is a Brik for that.\n\n";

   $context->run('shell::meby', 'cmdloop');
}
