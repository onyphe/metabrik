#!/usr/bin/perl
#
# $Id$
#
use strict;
use warnings;

BEGIN {
   use File::HomeDir;

   my $lib = File::HomeDir->my_home."/Metabricky/lib";
   $lib =~ s/\\/\//g; # Converts Windows path

   eval("use lib \"$lib\";");
   if ($@) {
      chomp($@);
      die("[FATAL] metabricky: unable to load Metabricky libs [$@]\n");
   }
}

use Metabricky::Log::Console;
use Metabricky::Brick::Core::Context;

my $script = shift;

my $log = Metabricky::Log::Console->new(
   level => 3,
);

# XXX: brickify Log/Log::Console
my $context = Metabricky::Brick::Core::Context->new(
   log => $log,
);
$context->init or return;
$context->load_brick('core::global') or return;
$context->load_brick('core::meby') or return;

if (defined($script)) {
   $context->execute_brick_command('core::meby', 'script', $script);
}
else {
   $context->execute_brick_command('core::meby', 'cmdloop');
}
