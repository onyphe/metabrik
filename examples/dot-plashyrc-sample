"Welcome to Plashy -  Knowledge is in your head, Detail is in the code"
"Version $Plashy::VERSION"

my $home = $ENV{HOME}
my $user = $ENV{USER}

set global ctimeout 20
set global rtimeout 20
set global commands vi,cat,less,w,nc,grep,find,cpanm

load www

load slurp

load httpproxy

load ssh2
set ssh2 debug 1
set ssh2 host localhost
set ssh2 username $user
set ssh2 publickey $user."/.ssh/id_rsa.pub"
set ssh2 privatekey $user."/.ssh/id_rsa"

load vfeed
set vfeed db $home."/plashy/data/vfeed.db"

# Use your own private plugins
use lib "$ENV{HOME}/path/to/lib"

load myplugin
