version
my $version = $_

print "--[ Welcome to MetaBricky - Knowledge is in your head, Detail is in the code ]--\n"
print "--[ Version $version ]--\n"
print "\n"
print "    There is a Brick for that.\n\n"

#Â Change terminal title
title "MetaBricky v$version"

my $home = $ENV{HOME}
my $user = $ENV{USER}

set global datadir $home."/metabricky/data"
set global ctimeout 20
set global rtimeout 20
set global commands vi:cat:less:w:nc:grep:find:cpanm

load www

load slurp

load httpproxy

load ssh2
set ssh2 debug 1
set ssh2 host localhost
set ssh2 username $user
set ssh2 publickey $user."/.ssh/id_rsa.pub"
set ssh2 privatekey $user."/.ssh/id_rsa"

load vfeed
set vfeed db $home."/metabricky/data/vfeed.db"

# Use your own private bricks
use lib "$ENV{HOME}/path/to/lib"

load mybrick
