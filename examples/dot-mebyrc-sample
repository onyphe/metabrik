version
my $version = $_

print "--[ Welcome to Metabricky - Knowledge is in your head, Detail is in the code ]--\n"
print "--[ Version $version ]--\n"
print "\n"
print "    There is a Brick for that.\n\n"

#Â Change terminal title
title "Metabricky running"

my $home = $ENV{HOME}
my $user = $ENV{USER}

set core::global datadir $home."/metabricky/data"
set core::global ctimeout 20
set core::global rtimeout 20

set core::shell commands vi:cat:less:w:nc:grep:find:cpanm

load http::www

load file::slurp

load http::proxy

load remote::ssh2
set remote::ssh2 debug 1
set remote::ssh2 host localhost
set remote::ssh2 username $user
set remote::ssh2 publickey $user."/.ssh/id_rsa.pub"
set remote::ssh2 privatekey $user."/.ssh/id_rsa"

load database::vfeed
set database::vfeed db $home."/metabricky/data/vfeed.db"

# Use your own private bricks
use lib "$ENV{HOME}/path/to/lib"

load category::mybrick

set core::global echo 1
